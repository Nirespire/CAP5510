<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cap5510.cap5510.FriendFeedActivity"
    tools:showIn="@layout/activity_friend_feed"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:orientation="vertical"
      >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Jennifer watched Magicians Season 1"
           android:layout_weight="1"
           android:textSize="15sp"
           android:paddingTop="@dimen/activity_vertical_margin"
           android:paddingLeft="@dimen/list_left_padding"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Mar 10 2016, 11:10AM"
           android:paddingLeft="@dimen/list_left_padding"
           android:textSize="15sp"

           />


   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/borders"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/list_left_padding"
            android:text="Jack Commented"
            android:textSize="15sp"
            android:id="@+id/comment"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I like this show"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:textSize="15sp"
            android:paddingLeft="@dimen/list_left_padding"
            android:id="@+id/detailcomment"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mar 4 2016, 05:00PM"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/timestamp"
                android:paddingLeft="@dimen/list_left_padding"/>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2"
               android:id="@+id/num"
               android:layout_centerInParent="true"
               android:layout_alignParentRight="true"
               android:layout_marginEnd="70dp"
               android:layout_marginRight="70dp"
               android:textSize="15sp"/>


           <ImageButton
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:id="@+id/likeimage"
               android:layout_centerInParent="true"
               android:layout_alignParentRight="true"
               android:layout_marginEnd="44dp"
               android:layout_marginRight="44dp"
               android:background="@drawable/like_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/num2"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:textSize="15sp"/>


        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/commentimage"
            android:background="@drawable/comment"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
